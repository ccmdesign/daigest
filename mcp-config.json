{
  "mcpServers": {
    "perplexity": {
      "command": "node",
      "args": [
        "/usr/local/lib/node_modules/perplexity-mcp/build/index.js"
      ],
      "env": {
        "PERPLEXITY_API_KEY": "${PERPLEXITY_API_KEY}"
      }
    },
    "tavily": {
      "command": "npx",
      "args": ["-y", "tavily-mcp@latest"],
      "env": {
        "TAVILY_API_KEY": "${TAVILY_API_KEY}"
      }
    },
    "brightdata": {
      "command": "npx",
      "args": ["@brightdata/mcp"],
      "env": {
        "BRIGHTDATA_API_KEY": "${BRIGHTDATA_API_KEY}"
      }
    },
    "firecrawl": {
      "command": "npx",
      "args": ["firecrawl-mcp"],
      "env": {
        "FIRECRAWL_API_KEY": "${FIRECRAWL_API_KEY}"
      }
    },
    "playwright": {
      "command": "npx",
      "args": ["@playwright/mcp"]
    },
    "pdf-reader": {
      "command": "npx",
      "args": ["@sylphlab/pdf-reader-mcp"]
    },
    "apify": {
      "command": "npx",
      "args": ["@apify/actors-mcp-server"],
      "env": {
        "APIFY_API_TOKEN": "${APIFY_API_TOKEN}"
      }
    },
    "scrappey": {
      "command": "node",
      "args": ["/Users/claudiomendonca/Documents/GitHub/vibe-stuff/ai-digest/node_modules/@mseep/scrappey-mcp/index.js"],
      "env": {
        "SCRAPPEY_API_KEY": "${SCRAPPEY_API_KEY}"
      }
    }
  }
}
